{
  "manifest_version":2,

  "name":"AlphaText--Extension for online text readability",
  "description":"This extension helps enhance online articles readbility with user customization",
  "version":"1.0",

  "browser_action":{
    "default_icon":"icon.png",
    "default_popup":"popup.html",
    "default_title":"AlphaText"
  }, 
  
  "background":{
    "scripts":["eventPage.js"],
    "persistent":false
  },
  
  "content_scripts":[
    {
      "matches":["http://*/*","https://*/*"],
      "css":["mystyles.css"],
      "js":["3rdparty/jquery-2.1.4.min.js","contentscript.js"]
    }
  ],
  
  "permissions":[
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs", 
    "http://*/*", 
    "https://*/*", 
    "fontSettings",
    "storage"
  ]
}
