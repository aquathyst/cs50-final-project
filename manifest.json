{
  "manifest_version": 2,

  "name": "AlphaText--Extension for online text readability",
  "description": "This extension helps enhance online articles readbility with user customization",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
    "default_title": "AlphaText"
  }, 
  
  "permissions": {
    "activeTab",
    "https://ajax.googleapis.com/"
    "tabs", 
    "http://*/*", 
    "https://*/*", 
    "fontSettings"
  }
  
  "background": {
      "scripts": ["background.js"]
  },
  
  "content_scripts": [
      {
        "css":["mystyles.css"],
        "js": ["myscript.js"], 
        "matches": ["*"]
      }
    ]
}