{
  "manifest_version": 2,

  "name": "AlphaText - Customize online text for readability",
  "short_name": "AlphaText",
  "description": "Enhance online articles' readability with customizations",
  "version": "0.1",

  "browser_action": {
    "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
          },
    "default_popup": "popup.html",
    "default_title": "AlphaText"
  }, 
  
  "icons": { 
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png" 
  },
  
  "incognito": "spanning",
  
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://*/*", 
    "https://*/*"
  ]
}
